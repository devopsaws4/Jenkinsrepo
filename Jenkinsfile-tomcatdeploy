pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        jdk "javahome"
        maven "mavenhome1"
    }

    stages {
        stage('cloning') {
            steps {
                // Get some code from a GitHub repository
                git credentialsId: 'gitcredentailsid', url: 'https://github.com/devopsaws4/babyrepo.git'

                              
            } }
		 stage('build approval') {
            steps {
                echo "request for approval"
				input message: 'do you want to proceed the build?',submitter:'admin4'

                              
            }
			}	
		stage('Build') {
            steps {
                
                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

                
            }
            
        }
	stage('Deployment') {
            steps {
            echo "deploying to prod"
			deploy adapters: [tomcat7(url: 'http://192.168.2.155:8086', 
                              credentialsId: 'a7931aac-edf7-4ede-9ece-4d5fc2e8cbd0')], 
                     war: 'target/*.war',
                     contextPath: 'babynames'
                
                
            }
        }			
    }
}
